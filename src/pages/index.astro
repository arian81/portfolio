---
import GithubIcon from "../icons/GithubIcon.astro";
import TwitterIcon from "../icons/TwitterIcon.astro";
import EmailIcon from "../icons/EmailIcon.astro";
import DevpostIcon from "../icons/DevpostIcon.astro";
import LinkedinIcon from "../icons/LinkedinIcon.astro";
import DiscordIcon from "../icons/DiscordIcon.astro";
import Copyright from "../components/Copyright";
import LastFm from "../components/LastFM";
import App from "../components/App";
import Header from "../components/Header.astro";
---

<!-- TODO: Add navbar -->
<html lang="en" class="w-full h-full m-0 p-0" data-theme="light">
  <head>
    <!-- HTML Meta Tags -->
    <meta
      name="description"
      content="Hey this is Arian Ahmadinejad. Software engineer from Canada, pursuing computer science to hack into the Matrix."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://arian.gg" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Arian Ahmadinejad | Software Engineer" />
    <meta
      property="og:description"
      content="Hey this is Arian Ahmadinejad. Software engineer from Canada, pursuing computer science to hack into the Matrix."
    />
    <meta property="og:image" content="https://arian.gg/meta.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="arian.gg" />
    <meta property="twitter:url" content="https://arian.gg" />
    <meta
      name="twitter:title"
      content="Arian Ahmadinejad | Software Engineer"
    />
    <meta
      name="twitter:description"
      content="Hey this is Arian Ahmadinejad. Software engineer from Canada, pursuing computer science to hack into the Matrix."
    />
    <meta name="twitter:image" content="https://arian.gg/meta.png" />
    <meta charset="utf-8" />
    <!-- Icons for everything -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#592406" />

    <link rel="canonical" href="https://arian.gg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Arian Ahmadinejad</title>
  </head>
  <body class="relative bg-orange-200 dark:bg-[#161616] w-full min-h-screen">
    <div
      class="flex flex-col items-center justify-center w-auto min-h-screen m-auto gap-10 pt-48 pb-24"
    >
      <div class="absolute top-0 w-full p-2"><Header /></div>

      <App client:load />
      <div
        class="flex flex-wrap justify-center w-48 gap-5 md:flex-nowrap md:w-5/12 md:gap-8 md:h-20"
      >
        <div
          class="basis-1/3 tooltip tooltip-accent tooltip-left md:tooltip md:tooltip-accent dark:tooltip-secondary"
          data-tip="Twitter"
        >
          <a
            href="https://twitter.com/TheArian81"
            aria-label="Twitter"
            class="text-[#592406] dark:text-[#ccc]"
            ><TwitterIcon />
          </a>
        </div>
        <div
          class="basis-1/3 tooltip tooltip-accent tooltip-right md:tooltip md:tooltip-accent dark:tooltip-secondary"
          data-tip="Github"
        >
          <a
            href="https://github.com/arian81/"
            aria-label="Github"
            class="text-[#592406] dark:text-[#ccc]"
            ><GithubIcon />
          </a>
        </div>
        <div
          class="basis-1/3 tooltip tooltip-accent tooltip-left md:tooltip md:tooltip-accent dark:tooltip-secondary"
          data-tip="Email"
        >
          <a
            href="mailto:hello@arian.gg"
            aria-label="Email"
            class="text-[#592406] dark:text-[#ccc]"
            ><EmailIcon />
          </a>
        </div>
        <div
          class="basis-1/3 tooltip tooltip-accent tooltip-right md:tooltip md:tooltip-accent dark:tooltip-secondary"
          data-tip="Devpost"
        >
          <a
            href="https://devpost.com/arian81"
            aria-label="Devpost"
            class="text-[#592406] dark:text-[#ccc]"
            ><DevpostIcon />
          </a>
        </div>
        <div
          class="basis-1/3 tooltip tooltip-accent tooltip-left md:tooltip md:tooltip-accent dark:tooltip-secondary"
          data-tip="Linkedin"
        >
          <a
            href="https://www.linkedin.com/in/arian81/"
            aria-label="Linkedin"
            class="text-[#592406] dark:text-[#ccc]"
            ><LinkedinIcon />
          </a>
        </div>
        <div
          class="basis-1/3 tooltip tooltip-accent tooltip-right md:tooltip md:tooltip-accent dark:tooltip-secondary"
          data-tip="Discord"
        >
          <a
            href="https://discordapp.com/users/412279988541456387"
            aria-label="Discord"
            class="text-[#592406] dark:text-[#ccc]"
            ><DiscordIcon />
          </a>
        </div>
      </div>
      <a
        class="btn btn-accent btn-outline btn-lg rounded-full border-[3px] dark:text-[#ccc] dark:border-[#ccc] dark:hover:bg-[#ccc] dark:hover:text-black dark:hover:border-[#ccc]"
        href="resume.pdf">Resume</a
      >
      <div class="absolute bottom-0 right-0 z-10 w-full md:w-fit md:p-4">
        <LastFm client:only />
      </div>
      <Copyright client:only />
    </div>
  </body>
</html>
