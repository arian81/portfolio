---
import GithubIcon from "../icons/GithubIcon.astro";
import TwitterIcon from "../icons/TwitterIcon.astro";
import EmailIcon from "../icons/EmailIcon.astro";
import DevpostIcon from "../icons/DevpostIcon.astro";
import LinkedinIcon from "../icons/LinkedinIcon.astro";
import DiscordIcon from "../icons/DiscordIcon.astro";
import Copyright from "../components/Copyright.astro";
import LogoIcon from "../icons/LogoIcon.astro";
---

<!-- TODO: Add navbar -->
<html lang="en" class="h-full w-full" data-theme="light">
    <head>
        <!-- HTML Meta Tags -->
        <meta name="description" content="My personal website" />

        <!-- Facebook Meta Tags -->
        <meta property="og:url" content="https://notclone.tech" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="Arian Ahmadinejad" />
        <meta property="og:description" content="My personal website" />
        <meta property="og:image" content="https://notclone.tech/meta.png" />

        <!-- Twitter Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta property="twitter:domain" content="notclone.tech" />
        <meta property="twitter:url" content="https://notclone.tech" />
        <meta name="twitter:title" content="Arian Ahmadinejad" />
        <meta name="twitter:description" content="My personal website" />
        <meta name="twitter:image" content="https://notclone.tech/meta.png" />

        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/logo.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Arian Ahmadinejad</title>
    </head>
    <body class="bg-orange-200 w-full h-full">
        <div
            class="flex flex-col items-center justify-center w-auto h-full gap-10 m-auto max-w-screen-xl"
        >
            <div class="w-12 m-3 absolute top-0 left-0">
                <a href="./"><LogoIcon /></a>
            </div>

            <div class="flex gap-5">
                <div class="border-[#592406] border-4 rounded-full w-fit"></div>
                <div class="flex flex-col justify-center">
                    <h1 class="text-black text-4xl font-bold">
                        Arian Ahmadinejad
                    </h1>
                    <h2 class="text-black text-2xl font-bold">CS Student</h2>
                </div>
            </div>

            <div
                class="flex flex-wrap md:flex-nowrap w-52 gap-5 md:w-5/12 md:gap-8 md:h-20 justify-center"
            >
                <div
                    class="basis-1/3 tooltip tooltip-accent tooltip-left md:tooltip md:tooltip-accent"
                    data-tip="Twitter"
                >
                    <a
                        href="https://twitter.com/TheArian81"
                        aria-label="Twitter"
                        ><TwitterIcon />
                    </a>
                </div>
                <div
                    class="basis-1/3 tooltip tooltip-accent tooltip-right md:tooltip md:tooltip-accent"
                    data-tip="Github"
                >
                    <a href="https://github.com/arian81/" aria-label="Github"
                        ><GithubIcon />
                    </a>
                </div>
                <div
                    class="basis-1/3 tooltip tooltip-accent tooltip-left md:tooltip md:tooltip-accent"
                    data-tip="Email"
                >
                    <a
                        href="mailto:ahmadinejadarian@gmail.com"
                        aria-label="Email"
                        ><EmailIcon />
                    </a>
                </div>
                <div
                    class="basis-1/3 tooltip tooltip-accent tooltip-right md:tooltip md:tooltip-accent"
                    data-tip="Devpost"
                >
                    <a href="https://devpost.com/arian81" aria-label="Devpost"
                        ><DevpostIcon />
                    </a>
                </div>
                <div
                    class="basis-1/3 tooltip tooltip-accent tooltip-left md:tooltip md:tooltip-accent"
                    data-tip="Linkedin"
                >
                    <a
                        href="https://www.linkedin.com/in/arian81/"
                        aria-label="Linkedin"
                        ><LinkedinIcon />
                    </a>
                </div>
                <div
                    class="basis-1/3 tooltip tooltip-accent tooltip-right md:tooltip md:tooltip-accent"
                    data-tip="Discord"
                >
                    <a
                        href="https://discordapp.com/users/412279988541456387"
                        aria-label="Discord"
                        ><DiscordIcon />
                    </a>
                </div>
            </div>

            <a
                class="btn btn-accent btn-outline btn-lg rounded-full border-[3px]"
                href="resume.pdf">Resume</a
            >
            <Copyright />
        </div>
    </body>
</html>
